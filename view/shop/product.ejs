<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style/main.css" />
    <link rel="stylesheet" href="/style/product.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include("../layout/headerNav.ejs") %>
    <h1>Product List</h1>
    <% if (products.length > 0){%>
    <div class="card-grid">
      <% products.forEach((prod)=>{%>
      <div class="card">
        <img
          src="https://media.istockphoto.com/photos/programming-new-application-picture-id1317473369"
          alt="Denim Jeans"
          style="width: 100%"
        />
        <h1><%= prod.name %></h1>
        <p class="price"><%= prod.sku %></p>
        <p>
          Some text about the jeans. Super slim and comfy lorem ipsum lorem
          jeansum. Lorem jeamsun denim lorem jeansum.
        </p>
        <p><button>Add to Cart</button></p>
      </div>
      <% }) %>
    </div>
    <%}%>
  </body>
</html>
